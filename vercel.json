{
  "version": 2,
  "installCommand": "npm ci",
  "buildCommand": "npm run build:web",
  "outputDirectory": "public",
  "rewrites": [
    {
      "source": "/v1/(.*)",
      "destination": "/api"
    },
    {
      "source": "/healthz",
      "destination": "/api"
    },
    {
      "source": "/(.*\\.(js|css|webmanifest|svg|png|jpg|jpeg|ico))",
      "destination": "/$1"
    },
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
